{
  "kind": "Pod",
  "apiVersion":"v1",

  "metadata": {
    "name": "hello-nginx-docker",
    "labels": {
            "name": "hello-nginx-docker"
    }
  },

  "spec": {
      "containers": [{
        "name": "hello-nginx-docker-pod",
        "image": "pweil/non-root",
        "ports": [
          {
            "containerPort": 80
          },
          {
            "containerPort": 443
          }
        ],
        "securityContext": {
            "runAsNonRoot": true
        }
      }]
  }
}
